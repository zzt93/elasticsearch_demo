{
  "template": "messages-*",
  "mappings": {
    "messages": {
      "properties": {
        "name": {
          "type": "text",
          "analyzer": "ik_smart"
        },
        "chatId": {
          "type": "keyword"
        },
        "content": {
          "type": "text"
        },
        "sub": {
          "type": "byte"
        },
        "time": {
          "type": "long"
        }
      }
    }
  },
  "settings": {
    "index": {
      "refresh_interval": "1s",
      "number_of_shards": "1",
      "store": {
        "type": "fs"
      },
      "number_of_replicas": "0"
    }
  }
}
