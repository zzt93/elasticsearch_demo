{
  "template": "announcement-*",
  "mappings": {
    "announcement": {
      "properties": {
        "affairId": {
          "type": "long"
        },
        "thumbContent": {
          "type": "text",
          "analyzer": "ik_smart"
        },
        "content": {
          "type": "text",
          "analyzer": "ik_smart"
        },
        "modifyTime": {
          "type": "date",
          "format": "yyyy-MM-dd HH:mm:ss.SSS"
        },
        "tags": {
          "type": "keyword"
        },
        "title": {
          "type": "keyword"
        },
        "state": {
          "type": "byte"
        },
        "plateType": {
          "type": "byte"
        },
        "roles": {
          "type": "long"
        }
      }
    }
  },
  "settings": {
    "index": {
      "refresh_interval": "1s",
      "number_of_shards": "1",
      "store": {
        "type": "fs"
      },
      "number_of_replicas": "0"
    }
  }
}

