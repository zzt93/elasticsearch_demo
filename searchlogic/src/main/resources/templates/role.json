{
  "template": "role-*",
  "mappings": {
    "role": {
      "properties": {
        "affairId": {
          "type": "long"
        },
        "affairName": {
          "type": "text",
          "analyzer": "ik_smart"
        },
        "ownerRoleId": {
          "type": "long"
        },
        "ownerRoleTitle": {
          "type": "text",
          "analyzer": "ik_smart"
        },
        "tags": {
          "type": "keyword"
        },
        "title": {
          "type": "text",
          "analyzer": "ik_smart"
        },
        "type": {
          "type": "byte"
        },
        "publicType": {
          "type": "byte"
        }
      }
    }
  },
  "settings": {
    "index": {
      "refresh_interval": "1s",
      "number_of_shards": "1",
      "store": {
        "type": "fs"
      },
      "number_of_replicas": "0"
    }
  }
}
