{
  "template": "role-*",
  "mappings": {
    "role": {
      "properties": {
        "affairId": {
          "type": "long",
          "index" : false
        },
        "affairName": {
          "type": "text",
          "analyzer": "ik_smart"
        },
        "ownerRoleId": {
          "type": "long",
          "index" : false
        },
        "ownerRoleTitle": {
          "type": "text",
          "analyzer": "ik_smart"
        },
        "tags": {
          "type": "nested",
          "properties": {
            "des": {
              "type": "keyword"
            }
          }
        },
        "title": {
          "type": "text",
          "analyzer": "ik_smart"
        },
        "type": {
          "type": "byte"
        }
      }
    }
  },
  "settings": {
    "index": {
      "refresh_interval": "1s",
      "number_of_shards": "2",
      "store": {
        "type": "fs"
      },
      "number_of_replicas": "1"
    }
  }
}