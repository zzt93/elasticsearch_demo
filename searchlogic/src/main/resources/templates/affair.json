{
  "template": "affair-*",
  "mappings": {
    "affair": {
      "properties": {
        "name": {
          "type": "keyword",
          "analyzer": "ik_smart"
        },
        "parentId": {
          "type": "keyword",
          "index": false
        },
        "state": {
          "type": "byte"
        },
        "publicType": {
          "type": "byte"
        },
        "superId": {
          "type": "keyword"
        },
        "tags": {
          "type": "keyword"
        }
      }
    }
  },
  "settings": {
    "index": {
      "refresh_interval": "1s",
      "number_of_shards": "1",
      "store": {
        "type": "fs"
      },
      "number_of_replicas": "0"
    }
  }
}
